#include <stdio.h>
int main()
{
    int arr[100], n, count = 0; 
    int i, j, k; 
    scanf("%d", &n);
    for (i = 0; i < n; i++)
    {
        printf("element - %d : ", i);
        scanf("%d", &arr[i]);  
    }
     printf("even elements are : " );
     for (i = 0; i < n; i++)
    {
        if(i%2==0){
            printf("  %d ", arr[i]); 
        }  
    }
    printf("\n");
     printf("odd elements are : " );
     for (i = 0; i < n; i++)
    {
        if(i%2 !=0){
            printf("  %d ", arr[i]); 
        }  
    }
    
    return 0; 
}
