#include <stdio.h>
int main()
{
    int arr[100],arr2[100],arr3[100]; 
    int i, j=0, k=0,n; 
    scanf("%d", &n);
    for (i = 0; i < n; i++)
    {
        printf("element - %d : ", i);
        scanf("%d", &arr[i]);  
    }
 
     for (i = 0; i < n; i++)
    {
        if(arr[i]%2==0){
            arr2[j]=arr[i];
            j++;
        }
        else{
        arr3[k]=arr[i];
         k++; 
        }
    }
    
     
    printf("even integers are: ");
     for (i = 0; i < j; i++){
         printf("%d ",arr2[i]);
     }
     printf("\t");
     printf("odd integers are: ");
     for (i = 0; i < k; i++){
         printf("%d ",arr3[i]);
     }


    
    return 0; 
}
