#include <stdio.h>

int main() {
    int a[100];
    int i,n,max, min,k,l;
    scanf("%d",&n);
   
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
     max=a[0];
     min= a[0];
     for(i=0;i<n;i++){
      if(max<a[i]){
          max= a[i];
           k= i;
      }
       if(min>a[i]){
          min= a[i];
           l= i;
    }
     }
    printf("max= %d, index %d\n",max,k);
      printf("min= %d, index %d",min,l);

    return 0;
}
