#include<stdio.h>
//problem 4
int main()
{
    int a[10000],i,n,sum=0 ;
    scanf("%d",&n); 
    for(i=0; i<=n-1; i++){
        scanf("%d",&a[i]);
    }
    for(i=0; i<=n-1; i++)
    {
       if(i%2==0){
        sum= sum+a[i];
       }
    }
    printf("Total Sum of Even values is: %d ",sum);   
return 0;
}
